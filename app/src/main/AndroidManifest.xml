<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appcolegio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppColegio"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- ACTIVIDAD PRINCIPAL - LOGIN -->
        <activity
            android:name="com.example.appcolegio.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.appcolegio.RegisterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".AddStudentActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".StudentsListActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".EditStudentActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".AddNoteActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".ListNotesActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <activity
            android:name=".EditNoteActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

    </application>

</manifest>